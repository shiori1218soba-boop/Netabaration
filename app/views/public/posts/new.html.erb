<div class="container mt-5" style="max-width: 700px;">
  <div class="card shadow-sm border-0">
    <div class="card-header bg-primary text-white">
      <h4 class="mb-0">新規投稿</h4>
    </div>

    <div class="card-body">
      <% if @post.errors.any? %>
        <div class="alert alert-danger">
          <h6 class="alert-heading">入力エラーがあります</h6>
          <ul class="mb-0">
            <% @post.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <%= form_with model: @post, url: posts_path, local: true do |f| %>

        <!-- タイトル -->
        <div class="mb-3">
          <%= f.label :title, "タイトル", class: "form-label fw-bold" %>
          <%= f.text_field :title, class: "form-control", placeholder: "どんなネタバレ？" %>
        </div>

        <!-- 本文 -->
        <div class="mb-3">
          <%= f.label :body, "本文", class: "form-label fw-bold" %>
          <%= f.text_area :body, class: "form-control", rows: 6, placeholder: "もっとネタバレをしよう！" %>
        </div>

        <div class="text-end">
          <%= f.submit "投稿する", class: "btn btn-primary px-4" %>
        </div>

      <% end %>

    </div>
  </div>
</div>
