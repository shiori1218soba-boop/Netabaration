<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">

      <h2 class="mb-4 text-center">グループの編集</h2>

      <div class="card shadow-sm">
        <div class="card-body">
        <% if @group.errors.any? %>
          <div class="alert alert-danger">
            <h5><%= @group.errors.count %>件のエラーがあります</h5>
            <ul class="mb-0">
              <% @group.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

          <%= form_with model: @group, local: true do |f| %>

            <!-- タイトル -->
            <div class="mb-3">
              <%= f.label :name, "グループ名", class: "form-label" %>
              <%= f.text_field :name, class: "form-control" %>
            </div>

            <!-- 本文 -->
            <div class="mb-3">
              <%= f.label :introduction, "グループ紹介", class: "form-label" %>
              <%= f.text_area :introduction, rows: 6, class: "form-control" %>
            </div>

            <div class="d-flex justify-content-between mt-4">
              <%= f.submit "更新する", class: "btn btn-primary px-4" %>
              <%= link_to "戻る", group_path(@group), class: "btn btn-outline-secondary px-4" %>
            </div>

          <% end %>

        </div>
      </div>

    </div>
  </div>
</div>
