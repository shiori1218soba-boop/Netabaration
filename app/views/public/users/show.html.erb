<div class="container mt-4">

  <h2 class="mb-4"><%= @user.name %>さんの詳細</h2>
    <div class="card mb-3 shadow-sm">
      <div class="card-body">
        <p class="card-text"><%= simple_format(@user.introduction.presence || "ユーザー紹介はまだありません") %></p>
      </div>
    </div>


  <h3 class="mb-3"><%= @user.name %>さんの投稿一覧</h3>

  <!-- 投稿一覧 -->
  <% @posts.each do |post| %>
    <div class="card mb-3 shadow-sm">
      <div class="card-body">
        <h5><%= link_to post.title, post_path(post) %></h5>
        <p><%= truncate(post.body, length: 80) %></p>
        <small class="text-muted"><%= post.created_at.strftime("%Y-%m-%d %H:%M") %></small>
        <p>
          <%= link_to "#{post.post_comments.active.count} 件のコメント", post_path(post.id) %>
        </p>
      </div>
    </div>
  <% end %>

  <% if @posts.empty? %>
    <p class="text-muted">投稿はまだありません。</p>
  <% end %>
</div>
