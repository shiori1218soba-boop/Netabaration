<div class="container mt-5">
  <h3 class="mb-4">投稿管理</h3>

  <table class="table align-middle admin-user-table">
    <thead>
      <tr>
        <th>ID</th>
        <th>タイトル</th>
        <th>投稿日</th>
        <th>投稿者</th>
        <th>状態</th>
      </tr>
    </thead>

    <tbody>
      <% @posts.each do |post| %>
        <tr
          onclick="window.location='<%= admin_post_path(post) %>'"
          style="cursor: pointer;"
        >
          <td><%= post.id %></td>
          <td><%= post.title %></td>
          <td><%= l post.created_at, format: :short %></td>
          <td><%= post.user.name %></td>
          <td>
            <% if post.deleted_at? %>
              <span class="badge bg-secondary">非表示</span>
            <% else %>
              <span class="badge bg-success">表示中</span>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
