<%= form_with url: admin_search_path,
              method: :get,
              class: "d-flex align-items-center",
              local: true do |f| %>

  <%= f.text_field :content,
      class: "form-control form-control-sm me-2",
      placeholder: "キーワード" %>

  <%= f.select :model,
      options_for_select({"ユーザー"=>"user","投稿"=>"post"}),
      {},
      class: "form-select form-select-sm me-2" %>

  <%= f.select :method,
      options_for_select({"完全一致"=>"perfect","前方一致"=>"forward","後方一致"=>"backward","部分一致"=>"partial"}),
      {},
      class: "form-select form-select-sm me-2" %>

  <%= f.submit "検索", class: "btn btn-outline-success btn-sm" %>

<% end %>
