<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-8">

      <h3 class="mb-4">新規グループ作成</h3>

      <% if @group.errors.any? %>
        <div class="alert alert-danger">
          <ul>
            <% @group.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      
      <div class="card shadow-sm">
        <div class="card-body">
          <%= form_with model: @group,
                        url: groups_path,
                        local: true do |f| %>

            <div class="mb-3">
              <%= f.label :name, "グループ名", class: "form-label" %>
              <%= f.text_field :name,
                    class: "form-control",
                    placeholder: '例：映画○○について' %>
            </div>

            <div class="mb-3">
              <%= f.label :introduction, "グループ説明", class: "form-label" %>
              <%= f.text_area :introduction,
                    rows: 4,
                    class: "form-control",
                    placeholder: "グループの説明を入力してください" %>
            </div>

            <div class="text-end">
              <%= f.submit "作成する", class: "btn btn-primary" %>
            </div>

          <% end %>
        </div>
      </div>

    </div>
  </div>
</div>
