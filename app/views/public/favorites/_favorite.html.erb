<% if current_user.favorite.exists?(post: post) %>
  <%= link_to "★ いいね解除",
      group_post_favorite_path(post),
      method: :delete,
      class: "btn btn-warning" %>
<% else %>
  <%= link_to "☆ いいね",
      group_post_favorite_path(post),
      method: :post,
      class: "btn btn-outline-warning" %>
<% end %>

<span><%= post.favorites.count %> 件</span>